{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<main class="container py-5">
    <section class="row justify-content-center">
        <article class="col-md-8">
            <h1 class="mb-4 text-center">Mon Profil</h1>

            <ul class="list-group">
                <li class="list-group-item"><strong>Prénom :</strong> {{ user.firstname }}</li>
                <li class="list-group-item"><strong>Nom :</strong> {{ user.lastname }}</li>
                <li class="list-group-item"><strong>Email :</strong> {{ user.email }}</li>
                <li class="list-group-item"><strong>Inscrit depuis :</strong> {{ user.createdAt|date('d/m/Y à H:i') }}</li>
            </ul>

            <div class="mt-4 text-center">
                <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">Modifier mes informations</a>
                <a href="{{ path('app_profile_password') }}" class="btn btn-warning ms-2">Changer mon mot de passe</a>
            </div>
        </article>
    </section>
</main>
{% endblock %}

