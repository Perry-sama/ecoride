{% extends 'base.html.twig' %}

{% block title %}Nouveau trajet{% endblock %}

{% block body %}
<main class="container my-5">
    <section class="card p-4 shadow rounded-4">
        <h1 class="mb-4">Créer un nouveau trajet</h1>

        {{ form_start(form) }}
            {{ form_row(form.depart) }}
            {{ form_row(form.destination) }}
            {{ form_row(form.dateHeure) }}
            {{ form_row(form.nbPlaces) }}
            {{ form_row(form.prix) }}
            {{ form_row(form.description) }}
            <button type="submit" class="btn btn-success mt-3">Créer</button>
        {{ form_end(form) }}

        <div class="mt-3">
            <a href="{{ path('app_trajet_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
        </div>
    </section>
</main>
{% endblock %}
