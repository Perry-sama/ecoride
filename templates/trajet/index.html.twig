{% extends 'base.html.twig' %}

{% block title %}Liste des trajets{% endblock %}

{% block body %}
<main class="container my-5">
    <section class="text-center mb-4">
        <h1>Liste des trajets</h1>
        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('app_trajet_new') }}" class="btn btn-success mt-2">➕ Proposer un nouveau trajet</a>
        {% else %}
            <p><a href="{{ path('app_login') }}" class="btn btn-outline-primary">Connectez-vous pour proposer un trajet</a></p>
        {% endif %}
    </section>

    <section class="row row-cols-1 row-cols-md-2 g-4">
        {% for trajet in trajets %}
            <article class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ trajet.depart }} → {{ trajet.destination }}</h5>
                        <p class="card-text">
                            <strong>Date/Heure :</strong> {{ trajet.dateHeure ? trajet.dateHeure|date('d/m/Y H:i') : 'N/A' }}<br>
                            <strong>Places :</strong> {{ trajet.nbPlaces }}<br>
                            <strong>Prix :</strong> {{ trajet.prix }} €<br>
                            <strong>Description :</strong> {{ trajet.description|default('Aucune') }}
                        </p>
                    </div>
                    <footer class="card-footer text-center d-flex justify-content-center gap-2 flex-wrap">
                        {% if trajet.user == app.user %}
                            <a href="{{ path('app_trajet_edit', {'id': trajet.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            {{ include('trajet/_delete_form.html.twig', {'trajet': trajet}) }}
                        {% elseif is_granted('ROLE_USER') %}
                            <form action="{{ path('app_reservation_trajet', {'id': trajet.id}) }}" method="post" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('reserver' ~ trajet.id) }}">
                                <button type="submit" class="btn btn-outline-success btn-sm">Réserver</button>
                            </form>
                        {% endif %}
                    </footer>
                </div>
            </article>
        {% else %}
            <div class="col text-center">
                <p>Aucun trajet trouvé.</p>
            </div>
        {% endfor %}
    </section>
</main>
{% endblock %}
