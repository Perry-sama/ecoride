{% extends 'base.html.twig' %}

{% block title %}Trajet{% endblock %}

{% block body %}
    <h1>Trajet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trajet.id }}</td>
            </tr>
            <tr>
                <th>Depart</th>
                <td>{{ trajet.depart }}</td>
            </tr>
            <tr>
                <th>Destination</th>
                <td>{{ trajet.destination }}</td>
            </tr>
            <tr>
                <th>DateHeure</th>
                <td>{{ trajet.dateHeure ? trajet.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NbPlaces</th>
                <td>{{ trajet.nbPlaces }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ trajet.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trajet.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ trajet.createdAt ? trajet.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

