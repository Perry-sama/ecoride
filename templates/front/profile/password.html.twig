{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}

{% block body %}
<main class="container py-5">
    <section class="row justify-content-center">
        <article class="col-md-6">
            <h1 class="mb-4 text-center">Modifier mon mot de passe</h1>

            {{ form_start(passwordForm) }}
                {{ form_row(passwordForm.plainPassword.first) }}
                {{ form_row(passwordForm.plainPassword.second) }}
                <button class="btn btn-warning w-100 mt-3">Changer le mot de passe</button>
            {{ form_end(passwordForm) }}
        </article>
    </section>
</main>
{% endblock %}
